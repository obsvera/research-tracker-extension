{
  "manifest_version": 3,
  "name": "Research Paper Tracker",
  "version": "1.0.0",
  "description": "Capture research papers from academic sites directly to your Research Paper Tracker",

  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },

  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "downloads",
    "clipboardWrite",
    "scripting",
    "notifications"
  ],

  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],

  "background": {
    "service_worker": "background-v3.js"
  },

  "action": {
    "default_icon": {
      "48": "icons/icon-48.png"
    },
    "default_title": "Capture Research Paper",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["browser-polyfill.min.js", "content-script.js"],
      "run_at": "document_idle"
    }
  ],

  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },

  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
